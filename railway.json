{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "javac -d out src/**/*.java server/**/*.java"
  },
  "deploy": {
    "startCommand": "java -cp out server.ServerMain",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}